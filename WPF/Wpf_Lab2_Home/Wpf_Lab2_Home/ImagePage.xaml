<Page x:Class="Wpf_Lab2_Home.ImagePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Wpf_Lab2_Home"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ImagePage">

    <Grid Background="White" Name="ImageGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" >
            <Image Grid.Row="0" Name="myImage" Width="Auto" MaxHeight="450" DockPanel.Dock="Top"
                   VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,0,0,10" >
                <!--="C:\\Users\\Emilka\\Desktop\\TopSecret.png">-->
            </Image>
        </Grid>
        <DockPanel Grid.Row="1">
            <Button DockPanel.Dock="Bottom"  Name="SaveImageButton" Width="80" Height="20" Click="SaveImage_Click">Save Image</Button>
        </DockPanel>

    </Grid>
</Page>
